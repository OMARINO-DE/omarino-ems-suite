# Environment variables for optimize-service
# Copy to .env and configure

# Service
SERVICE_NAME=optimize-service
VERSION=0.1.0
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8002
API_PREFIX=/api

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/omarino_ems

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Solver configuration
DEFAULT_SOLVER=highs
AVAILABLE_SOLVERS=["highs","cbc","glpk"]
SOLVER_TIMEOUT_SECONDS=300

# Optimization limits
MAX_TIME_HORIZON_HOURS=168
MAX_ASSETS=50

# Task management
MAX_CONCURRENT_OPTIMIZATIONS=5
JOB_RETENTION_HOURS=168

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=600

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5000"]

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
