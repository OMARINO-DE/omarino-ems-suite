# Environment variables for forecast-service
# Copy to .env and configure

# Service
SERVICE_NAME=forecast-service
VERSION=0.1.0
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8001
API_PREFIX=/api

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/omarino_ems

# Time series service
TIMESERIES_SERVICE_URL=http://localhost:5001

# Models
MODELS_DIR=./models
MAX_HORIZON_MINUTES=10080

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5000"]

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
