# OMARINO EMS Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=omarino
POSTGRES_PASSWORD=omarino_dev_pass
POSTGRES_DB=omarino

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=omarino_redis_pass

# =============================================================================
# Application Environment
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
ENVIRONMENT=production
LOG_LEVEL=Information

# =============================================================================
# Authentication & Security
# =============================================================================
# IMPORTANT: Change these in production!
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars-for-security
NEXTAUTH_SECRET=change-this-secret-in-production-use-openssl-rand-base64-32

# =============================================================================
# Web Application URLs
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================
OTEL_SERVICE_NAME=omarino-ems
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317

# =============================================================================
# Service-Specific Configuration
# =============================================================================
# Time Series Service
TIMESERIES_SERVICE_URL=http://timeseries-service:5001

# Forecast Service
FORECAST_SERVICE_URL=http://forecast-service:8001

# Optimize Service
OPTIMIZE_SERVICE_URL=http://optimize-service:8002

# Scheduler Service
SCHEDULER_SERVICE_URL=http://scheduler-service:5003

# AI Hub Service
AI_HUB_SERVICE_URL=http://ai-hub:8003

# =============================================================================
# AI Hub Configuration
# =============================================================================
# MinIO/S3 Storage for ML Models
MINIO_ENDPOINT_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MODEL_STORAGE_BUCKET=ml-models
AWS_REGION=us-east-1

# Model Cache
MODEL_CACHE_SIZE=5
MODEL_CACHE_TTL=3600

# Feature Store
FEATURE_CACHE_TTL=300
EXPORT_STORAGE_PATH=/app/exports

# ML Configuration
DEFAULT_FORECAST_HORIZON=24
ANOMALY_THRESHOLD=3.0
SHAP_MAX_SAMPLES=100

# =============================================================================
# Development Overrides (optional)
# =============================================================================
# Uncomment for development mode
# ASPNETCORE_ENVIRONMENT=Development
# ENVIRONMENT=development
# LOG_LEVEL=Debug
