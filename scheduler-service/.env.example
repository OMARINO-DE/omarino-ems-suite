# Environment variables for Scheduler Service
# Copy this file to .env and customize as needed

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5003

# Database Connection
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=scheduler
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
CONNECTION_STRING=Host=${DATABASE_HOST};Port=${DATABASE_PORT};Database=${DATABASE_NAME};Username=${DATABASE_USER};Password=${DATABASE_PASSWORD}

# Quartz.NET Configuration
QUARTZ_INSTANCE_NAME=OmarinoEmsScheduler
QUARTZ_THREAD_POOL_MAX_CONCURRENCY=10
QUARTZ_USE_PERSISTENT_STORE=true

# Workflow Engine
WORKFLOW_MAX_EXECUTION_TIME=01:00:00
WORKFLOW_MAX_RETRIES=3
WORKFLOW_RETRY_DELAY=00:00:30
WORKFLOW_ENABLE_WEBHOOKS=true

# Backend Service Endpoints
TIMESERIES_SERVICE_URL=http://timeseries-service:5001
FORECAST_SERVICE_URL=http://forecast-service:8001
OPTIMIZE_SERVICE_URL=http://optimize-service:8002

# Logging
LOG_LEVEL=Information
LOG_CONSOLE_ENABLED=true

# Prometheus Metrics
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=scheduler-service
